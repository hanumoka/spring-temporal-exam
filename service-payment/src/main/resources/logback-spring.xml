<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 출력 (개발용) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- MDC 패턴: [traceId][sagaId] 포함 -->
            <pattern>%d{HH:mm:ss.SSS} [%X{traceId:-NO_TRACE}][%X{sagaId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 프로파일별 설정 -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- 기본 설정 (프로파일 미지정 시) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
